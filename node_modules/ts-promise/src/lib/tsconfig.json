{
    "version": "1.8.2",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "outDir": "../../dist/",
        "rootDir": ".."
    },
    "filesGlob": [
        "../../typings/tsd.d.ts",
        "**/*.ts"
    ],
    "files": [
        "../../typings/tsd.d.ts",
        "async.ts",
        "BaseError.ts",
        "index.ts",
        "Promise.ts",
        "Stack.ts",
        "Trace.ts",
        "util.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
