<Page loaded="load">
    <ActionBar title="Reset password">
    <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    </ActionBar>
    <StackLayout orientation="vertical">
        <grid-layout rows="auto, auto">
            <TextField hint="Enter your email" keyboardType="email" text="{{ resetEmail }}" id="emailResetField" row="0" returnKeyType="done"/>
         </grid-layout>
        <Button text="Reset" tap="resetButton" class="buttonStyle" id="resetButton"/>
    </StackLayout>
</Page>